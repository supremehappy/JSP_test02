package myhome;

import java.util.ArrayList;

public class ProductList {
	private ArrayList<Integer> pidList=new ArrayList<Integer>();//상품번호
	private ArrayList<Integer> priceList=new ArrayList<Integer>();//가격
	private ArrayList<String> nameList=new ArrayList<String>();//상품이름
	private ArrayList<String> writerList=new ArrayList<String>();//상품등록자
	private ArrayList<String> dateList=new ArrayList<String>();//상품등록일
	
	public int getProductSize(){
		return pidList.size();
	}
	
	public void setPidList(int index, Integer pid){
		pidList.add(index, pid);
	}
	public Integer[] getPidList(){
		return pidList.toArray(new Integer[pidList.size()]);
	}
	public void setPriceList(int index, Integer price){
		priceList.add(index, price);
	}
	public Integer[] getPriceList(){
		return priceList.toArray(new Integer[priceList.size()]);
	}
	public void setNameList(int index, String name){
		nameList.add(index, name);
	}
	public String[] getNameList(){
		return nameList.toArray(new String[nameList.size()]);
	}
	public void setWriterList(int index, String id){
		writerList.add(index, id);
	}
	public String[] getWriterList(){
		return writerList.toArray(new String[writerList.size()]);
	}
	public void setDateList(int index, String date){
		dateList.add(index, date);
	}
	public String[] getDateList(){
		return dateList.toArray(new String[dateList.size()]);
	}
}
